<h2 class="text-2xl font-bold mb-4">Derniers Matchs</h2>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @matches.last(5).each do |match| %>
    <div class="bg-white p-4 rounded shadow">
      <h3 class="font-semibold"><%= match.team1.name %> vs <%= match.team2.name %></h3>
      <p>Date: <%= match.date.strftime("%d/%m/%Y") %></p>
      <p>Résultat: <%= match.result %></p>
      <%= link_to 'Détails', match_path(match), class: 'text-blue-500' %>
    </div>
  <% end %>
</div>