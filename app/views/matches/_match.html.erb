<div id="<%= dom_id(match) %>" class="w-full sm:w-auto my-5 space-y-6">

  <div class="bg-white rounded-lg shadow p-4">
    <h2 class="text-xl font-semibold text-gray-800 mb-2 flex items-center gap-2">
      <%= image_tag match.team1.logo.present? ? match.team1.logo : "https://static.wikia.nocookie.net/leagueoflegends/images/0/04/Ionia_profileicon.png", alt: match.team1.name, class: "w-8 h-8 rounded-full" %>
      <%= match.team1.name %>
    </h2>
    <ul class="list-disc list-inside text-sm text-gray-700">
      <% match.team1.players.each do |player| %>
        <li><%= "#{player.first_name} #{player.last_name} (#{player.role})" %></li>
      <% end %>
    </ul>
  </div>

  <div class="bg-white rounded-lg shadow p-4">
    <h2 class="text-xl font-semibold text-gray-800 mb-2 flex items-center gap-2">
      <%= image_tag match.team2.logo.present? ? match.team2.logo : "https://static.wikia.nocookie.net/leagueoflegends/images/0/04/Ionia_profileicon.png", alt: match.team2.name, class: "w-8 h-8 rounded-full" %>
      <%= match.team2.name %>
    </h2>
    <ul class="list-disc list-inside text-sm text-gray-700">
      <% match.team2.players.each do |player| %>
        <li><%= "#{player.first_name} #{player.last_name} (#{player.role})" %></li>
      <% end %>
    </ul>
  </div>

  <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
    <% if match.result %>
      <p class="text-green-700 font-semibold text-lg">
        ✅ Victoire de <%= match.result.winning_team.name %>
      </p>
      <p class="text-gray-600 mt-1">
        <%= match.team1.name %> : <%= match.result.team1_score %> — <%= match.result.team2_score %> : <%= match.team2.name %>
      </p>
    <% else %>
      <p class="text-gray-400 italic">
        Les résultats de ce match ne sont pas encore disponibles.
      </p>
    <% end %>
  </div>
</div>
