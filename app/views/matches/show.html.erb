<div class="max-w-7xl mx-auto px-4 py-6">
  <h1 class="font-bold text-3xl mb-4">📝 Détails du match</h1>

  <%= render @match %>
  <% if admin? %>
    <div class="mt-8 flex gap-2">
      <%= link_to "Modifier", edit_match_path(@match), class: "rounded-md px-4 py-2 bg-blue-600 text-white hover:bg-blue-500 font-medium" %>
      <%= button_to "Supprimer", @match, method: :delete, form_class: "inline-block", class: "rounded-md px-4 py-2 bg-red-600 text-white hover:bg-red-500 font-medium", data: { turbo_confirm: "Supprimer ce match ?" } %>
    </div>
  <% end %>
</div>
