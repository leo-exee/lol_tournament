<%= form_with(model: player, class: "contents") do |form| %>
  <% if player.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(player.errors.count, "erreur") %> a empêché l'enregistrement du joueur :</h2>
      <ul class="list-disc ml-6">
        <% player.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :first_name, "Prénom" %>
    <%= form.text_field :first_name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": player.errors[:first_name].none?, "border-red-400 focus:outline-red-600": player.errors[:first_name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :last_name, "Nom" %>
    <%= form.text_field :last_name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": player.errors[:last_name].none?, "border-red-400 focus:outline-red-600": player.errors[:last_name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :role, "Rôle" %>
    <%= form.select :role, Player::ROLES, { prompt: "Sélectionner un rôle" }, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": player.errors[:role].none?, "border-red-400 focus:outline-red-600": player.errors[:role].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :team_id, "Équipe" %>
    <%= form.collection_select :team_id, @teams, :id, :name, { prompt: "Sélectionner une équipe" }, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": player.errors[:team_id].none?, "border-red-400 focus:outline-red-600": player.errors[:team_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit "Enregistrer le joueur", class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
