<% content_for :title, "Tous les joueurs" %>

<div class="max-w-7xl mx-auto p-6">

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-3xl text-gray-800">Tous les joueurs</h1>
    <% if admin? %>
      <a href="/players/new" class="rounded-md px-4 py-2 bg-yellow-400 hover:bg-yellow-500 text-black font-medium flex items-center transition duration-200">
        <i class="fas fa-plus pr-2"></i>
