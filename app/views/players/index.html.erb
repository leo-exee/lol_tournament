    <% end %>
  </div>

  <% if @players.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @players.each do |player| %>
        <%= link_to player_path(player), class: "block bg-white p-4 rounded-xl shadow hover:shadow-lg transition duration-200" do %>
