<div class="max-w-md mx-auto bg-white rounded-2xl shadow-lg overflow-hidden my-10">
  <div class="p-8">
    <h1 class="text-3xl font-bold text-gray-800 text-center mb-8">Se connecter</h1>

    <%= form_with url: create_session_path, local: true, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :email, "Adresse email", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.email_field :email, class: "block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-yellow-500 focus:border-yellow-500 text-sm placeholder-gray-400", placeholder: "exemple@domaine.com" %>
      </div>

      <div>
        <%= form.label :password, "Mot de passe", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.password_field :password, class: "block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-yellow-500 focus:border-yellow-500 text-sm placeholder-gray-400", placeholder: "••••••••" %>
      </div>

      <div>
        <%= form.submit "Se connecter", class: "w-full bg-yellow-500 hover:bg-yellow-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200 shadow focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:ring-offset-2" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <p class="text-sm text-gray-600">
        Pas encore de compte ?
        <%= link_to "Inscription", new_user_path, class: "text-yellow-500 hover:text-yellow-600 font-medium transition" %>
      </p>
    </div>
  </div>
</div>
