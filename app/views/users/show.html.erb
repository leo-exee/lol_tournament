<div class="max-w-lg mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl my-8">
  <div class="p-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Profil de l'utilisateur</h2>
    
    <div class="border rounded-lg p-6 mb-6">
      <div class="mb-4">
        <p class="text-sm text-gray-500">Email:</p>
        <p class="font-semibold"><%= @user.email %></p>
      </div>
      
      <div class="mb-4">
        <p class="text-sm text-gray-500">Inscrit depuis:</p>
        <p class="font-semibold"><%= time_ago_in_words(@user.created_at) %></p>
      </div>
    </div>
    
    <% if current_user == @user %>
      <div class="flex space-x-4">
        <%= link_to "Modifier le profil", edit_user_path(@user), class: "flex-1 py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 text-center" %>
        
        <%= link_to "Supprimer le compte", user_path(@user), method: :delete, data: { confirm: "ÃŠtes-vous sÃ»r de vouloir supprimer votre compte?" }, class: "flex-1 py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 text-center" %>
      </div>
    <% end %>
  </div>
</div>