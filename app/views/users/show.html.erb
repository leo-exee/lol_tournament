<div class="max-w-xl mx-auto bg-white rounded-2xl shadow-lg overflow-hidden my-10">
  <div class="p-8">
    <h2 class="text-3xl font-bold text-gray-800 text-center mb-8">Profil de l'utilisateur</h2>

    <div class="border border-gray-200 rounded-xl p-6 bg-gray-50 mb-8">
      <div class="mb-6">
        <p class="text-sm text-gray-500">Adresse email</p>
        <p class="text-lg font-semibold text-gray-800"><%= @user.email %></p>
      </div>

      <div>
        <p class="text-sm text-gray-500">Inscrit depuis</p>
        <p class="text-lg font-semibold text-gray-800"><%= time_ago_in_words(@user.created_at) %> ago</p>
      </div>
    </div>

    <% if current_user == @user %>
      <div class="flex flex-col sm:flex-row gap-4">
        <%= link_to "Modifier le profil", edit_user_path(@user), class: "w-full sm:w-auto py-2 px-4 rounded-lg text-white bg-blue-600 hover:bg-blue-700 font-semibold text-sm shadow transition focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 text-center" %>

        <%= link_to "Supprimer le compte", user_path(@user), method: :delete, data: { confirm: "Êtes-vous sûr de vouloir supprimer votre compte ?" }, class: "w-full sm:w-auto py-2 px-4 rounded-lg text-white bg-red-600 hover:bg-red-700 font-semibold text-sm shadow transition focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 text-center" %>
      </div>
    <% end %>
  </div>
</div>
