<div class="max-w-lg mx-auto bg-white rounded-2xl shadow-lg overflow-hidden my-10">
  <div class="p-8">
    <h2 class="text-3xl font-bold text-gray-800 text-center mb-8">Modifier mon profil</h2>

    <% if @user.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-5 py-4 rounded-xl mb-6" role="alert">
        <span class="block font-semibold mb-2">Erreurs :</span>
        <ul class="list-disc pl-5 space-y-1 text-sm">
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: @user, local: true, class: "space-y-6") do |f| %>
      <div>
        <%= f.label :email, "Adresse email", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, class: "block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-yellow-500 focus:border-yellow-500 text-sm placeholder-gray-400", placeholder: "exemple@domaine.com" %>
      </div>

      <div>
        <%= f.label :password, "Nouveau mot de passe", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, class: "block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-yellow-500 focus:border-yellow-500 text-sm placeholder-gray-400", placeholder: "Laissez vide pour ne pas changer" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Confirmation du nouveau mot de passe", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, class: "block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-yellow-500 focus:border-yellow-500 text-sm placeholder-gray-400", placeholder: "Confirmez le mot de passe" %>
      </div>

      <div>
        <%= f.submit "Mettre à jour", class: "cursor-pointer w-full bg-yellow-400 hover:bg-yellow-500 py-2 px-4 rounded-lg transition duration-200 shadow focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:ring-offset-2" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= link_to "← Retour au profil", user_path(@user), class: "text-yellow-600 hover:text-yellow-500 font-medium transition text-sm" %>
    </div>
  </div>
</div>
