<div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl my-8">
  <div class="p-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Connexion</h2>
    
    <% if flash[:alert] %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <p><%= flash[:alert] %></p>
      </div>
    <% end %>
    
    <%= form_with(scope: :session, url: login_path, local: true, class: "space-y-6") do |f| %>
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, class: "mt-1 focus:ring-yellow-500 focus:border-yellow-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", placeholder: "Entrez votre email" %>
      </div>
      
      <div>
        <%= f.label :password, "Mot de passe", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, class: "mt-1 focus:ring-yellow-500 focus:border-yellow-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", placeholder: "Entrez votre mot de passe" %>
      </div>
      
      <div>
        <%= f.submit "Se connecter", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-yellow-600 hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500" %>
      </div>
    <% end %>
    
    <div class="mt-4 text-center">
      <p class="text-sm text-gray-600">
        Pas encore de compte? <%= link_to "S'inscrire", signup_path, class: "font-medium text-yellow-600 hover:text-yellow-500" %>
      </p>
    </div>
  </div>
</div>